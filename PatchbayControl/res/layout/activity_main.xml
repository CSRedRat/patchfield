<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/displayLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <com.noisepages.nettoyeur.patchbay.control.PatchView
        android:id="@+id/patchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/displayLine"
        android:layout_toRightOf="@+id/displayLine" />

    <LinearLayout
        android:id="@+id/iconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/patchView"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/playButton"
        android:layout_toLeftOf="@+id/patchView"
        android:orientation="vertical" >

    </LinearLayout>

    <ToggleButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/displayLine"
        android:layout_below="@+id/displayLine"
        android:text="PlayButton" />

</RelativeLayout>
